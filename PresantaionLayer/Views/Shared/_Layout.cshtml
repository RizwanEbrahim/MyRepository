<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -QUnderFlow</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
</head>
<body>
@using (Html.BeginForm("Search", "Question", FormMethod.Get))
{ 
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" style="background-color:red;" href="#">QUnderFlow</a>
                <ul class="nav navbar-nav">
                   
                    <li style="font-size:18px;">@Html.ActionLink("Questions", "AllQuestions", "Question")</li>
                    <li style="font-size:18px;"> @Html.ActionLink("Ask","AskView", "Question",null, new { @class = "glyphicon glyphicon-plus-sign", @style="padding-top:10px;"})</li>
                    <li style="font-size:18px;">@Html.Editor("SearchText", new { htmlAttributes = new { @class = "form-control" } }) </li>
                    <li style="font-size:18px;"> 
                     <input type="submit" id="btnFilter" value="Search" class="btn btn-success" /> </li>

                </ul>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#" onclick="Clear()" ><span class="glyphicon glyphicon-log-in"></span>Logout</a></li>
                </ul>
                </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>
}
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Copyrighted by:QUnderFlow limited</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/QJavaScript.js"></script>
</body>
</html>